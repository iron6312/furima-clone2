<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li>
        <%= link_to 'カテゴリー', categorys_path, class: "category-list" %>
        <ul>
          <% set_category.each do |category| %>
            <li class='category-name'><%= link_to category.name, category_path(category.id) %></li>
          <% end %>
        </ul>
      </li>
      <li>
      <%= link_to 'ブランド', brands_path, class: "brand-list" %>
      <ul>
          <li><%= link_to 'シャネル', brand_path(2) %></li>
          <li><%= link_to 'グッチ', brand_path(3) %></li>
          <li><%= link_to 'ナイキ', brand_path(4) %></li>
          <li><%= link_to 'アディダス', brand_path(5) %></li>
          <li><%= link_to 'シュプリーム', brand_path(6) %></li>
          <li><%= link_to 'プーマ', brand_path(7) %></li>
          <li><%= link_to 'コールマン', brand_path(8) %></li>
          <li><%= link_to 'エルメス', brand_path(9) %></li>
          <li><%= link_to 'ブランド一覧', brand_path(10) %></li>
        </ul>
      </li>
    </ul>
    <% if user_signed_in? %>
      <ul class='lists-right'>
        <li><%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      </ul>
    <% else %>
      <ul class='lists-right'>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      </ul>
    <% end %>
  </div>
</header>